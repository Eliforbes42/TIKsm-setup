dbrp "telegraf"."autogen"

var string cpucolumn = 'container_cpu_usage_seconds_total'
var string memorycolumn 'used'

var cpu = stream 
    | from()
        .measurement(cpucolumn)

var memory = stream
    | from()
        .measurement(memorycolumn)

cpu
    | join(memory)
        .as('cpu','memory')
        .tolerance(1s)
        .streamName('metrics')
    | eval(lambda: "cpu.value"*0.5 + "memory.value"*0.5)
        .as('health_value')
    | influxDBOut()
        .database('telegraf')